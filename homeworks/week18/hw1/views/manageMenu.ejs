<!doctype html>
<head>
    <%- include('template/head') %>
    
</head>
<html>

<%- include('template/navbar') %>
<div class="container mt-5">
    <% if (errorMessage && errorMessage.length > 0){ %>
    <div class="alert alert-dismissible alert-warning mt-2 ">
        <h5 class="alert-heading mt-2"><%= errorMessage %></h5>
    </div>
    <% } %>
<% if(username) { %>

<form method="POST" action="/add_menu">
    <div class="form-group">
        <p class="text-info">名稱:</p>
        <input type="text" name="name" class=" form-control" placeholder="請輸入品項">
    </div>
    <div class="form-group">
        <p class="text-info">價格:</p>
        <input type="text" name="content" class=" form-control" placeholder="請輸入金額">
    </div>
    <div class="form-group">
        <p class="text-info">圖片網址:</p>
        <input type="text" name="img" class=" form-control" placeholder="請輸入圖片網址">
    </div>
    
    <button type="submit" class="btn btn-info">新增</button>
</form>
<% } %>

<% menus.forEach(function(menu){ %>
<div class="card border-light mb-5 mt-4">
    <div class="card-body">
        <h6 class="card-title text-primary index-title">名稱: <%= menu.name %></h6>
        <h6 class="card-text text-muted index-content">價格:<%= menu.price %></h6>
        <h6 class="card-text text-muted index-content">圖片網址：<%= menu.img %></h6>
        
        <% if(username){ %>
        <div class="mt-4">
        <a href="/update_menu/<%= menu.id %>" class="card-link text-info">update</a>
        <a href="/delete_menu/<%= menu.id %>" class="card-link text-info">delete</a>
        </div>
         <% } %>
    </div>
</div>
<% }) %>
</html>