<!doctype html>

<head>
    <%- include('../template/head') %>
</head>
<html>

<%- include('../template/navbar') %>
<div class="container">
<div class="card border-light mb-3 mt-5 complete-card">
<% if (errorMessage && errorMessage.length > 0){ %>
<div class="alert alert-dismissible alert-warning mt-2">
    <h5 class="alert-heading mt-2 login-message"><%= errorMessage %></h5>
</div>
<% } %>
<form method="POST" action="/register" class="register-form">
    <div class="form-group mt-5">
        <h4 class="text-muted">Username:</h4>
        <input type="text" name="username" class="form-control login-input border-primary" placeholder="Enter username ...">
    </div>
    <div class="form-group mt-5">
        <h4 class="text-muted">Password:</h4>
        <input type="password" name="password" class="form-control login-input border-primary" placeholder="Enter password ...">
    </div>
    <button type="submit" class="btn btn-info mt-4 login-submit">Submit</button>
    
</form>

</div>
</div>
</html>