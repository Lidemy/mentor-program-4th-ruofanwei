<!doctype html>
<head>
    <%- include('template/head') %>
    
</head>
<html>

<%- include('template/navbar') %>
<div class="container mt-5">
<div class="card border-light mb-3 mt-5 complete-card">
<% if (errorMessage && errorMessage.length > 0){ %>
<div class="alert alert-dismissible alert-warning mt-2 update-errorMessage">
    <h5 class="alert-heading mt-2"><%= errorMessage %></h5>
</div>
<% } %>
<form method="POST" action="/update_faq/<%= faq.id %>" class="update-form">
    <div class="form-group mt-3 midd">
        <h6 class="text-muted ">題號:</h6>
        <input type="text" name="num" class=" form-control updateFaq-input border-primary" placeholder="請輸入問題" value="<%= `${faq.num}` %>">
    </div>
    <div class="form-group mt-2">
        <h6 class="text-muted ">問題:</h6>
        <input type="text" name="question" class=" form-control updateFaq-input border-primary" placeholder="請輸入獎項內容" value="<%= `${faq.question}` %>">
    </div>
    <div class="form-group mt-2">
        <h6 class="text-muted ">答案:</h6>
        <textarea type="text" name="answer" class="  updateFaq-textarea border-primary" placeholder="請輸入回答" ><%= `${faq.answer}` %></textarea>
    </div>
    
    <button type="submit" class="btn btn-info mt-1 updateFaq-submit">更新</button>
</form>
</div>



</div>

</html>