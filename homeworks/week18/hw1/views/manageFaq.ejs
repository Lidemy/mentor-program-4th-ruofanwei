<!doctype html>
<head>
    <%- include('template/head') %>
    
</head>
<html>

<%- include('template/navbar') %>
<div class="container mt-5">
    <% if (errorMessage && errorMessage.length > 0){ %>
    <div class="alert alert-dismissible alert-warning mt-2 ">
        <h5 class="alert-heading mt-2"><%= errorMessage %></h5>
    </div>
    <% } %>
<% if(username) { %>

<form method="POST" action="/add_faq">
    <div class="form-group">
        <p class="text-info">號碼:</p>
        <input type="text" name="num" class=" form-control" placeholder="請輸入問題號碼">
    </div>
    <div class="form-group">
        <p class="text-info">問題:</p>
        <input type="text" name="question" class=" form-control" placeholder="請輸入問題">
    </div>
    <div class="form-group">
        <p class="text-info">答案:</p>
        <textarea type="text" name="answer" class="textareaFaq " placeholder="請輸入回答"></textarea>
    </div>
    
    <button type="submit" class="btn btn-info">新增</button>
</form>
<% } %>

<% faqs.forEach(function(faq){ %>
<div class="card border-light mb-5 mt-4">
    <div class="card-body">
        <h6 class="card-title text-primary index-title">題號: <%= faq.num %></h6>
        <h6 class="card-text text-muted index-content">問題:<%= faq.question %></h6>
        <h6 class="card-text text-muted faq-content ">回答：<%= faq.answer %></h6>
        
        <% if(username){ %>
        <div class="mt-4">
        <a href="/update_faq/<%= faq.id %>" class="card-link text-info">update</a>
        <a href="/delete_faq/<%= faq.id %>" class="card-link text-info">delete</a>
        </div>
         <% } %>
    </div>
</div>
<% }) %>
</html>