<!doctype html>
<head>
    <%- include('template/head') %>
    
</head>
<html>

<%- include('template/navbar') %>
<div class="container mt-5">
    <% if (errorMessage && errorMessage.length > 0){ %>
    <div class="alert alert-dismissible alert-warning mt-2 ">
        <h5 class="alert-heading mt-2"><%= errorMessage %></h5>
    </div>
    <% } %>
<% if(username) { %>

<form method="POST" action="/add_prize">
    <div class="form-group">
        <p class="text-info">獎項:</p>
        <input type="text" name="name" class=" form-control" placeholder="請輸入獎項">
    </div>
    <div class="form-group">
        <p class="text-info">內容:</p>
        <input type="text" name="content" class=" form-control" placeholder="請輸入獎項內容">
    </div>
    <div class="form-group">
        <p class="text-info">圖片網址:</p>
        <input type="text" name="img" class=" form-control" placeholder="請輸入圖片網址">
    </div>
    <div class="form-group">
        <p class="text-info">權重:</p>
        <input type="text" name="weight" class=" form-control" placeholder="請輸入權重">
    </div>
    <button type="submit" class="btn btn-info">新增</button>
</form>
<% } %>

<% prizes.forEach(function(prize){ %>
<div class="card border-light mb-5 mt-4">
    <div class="card-body">
        <h6 class="card-title text-primary index-title">獎項：<%= prize.name %></h6>
        <h6 class="card-text text-muted index-content">獎品內容：<%= prize.content %></h6>
        <h6 class="card-text text-muted index-content">圖片網址：<%= prize.img %></h6>
        <h6 class="card-text text-muted index-content">權重：<%= prize.weight %></h6>
        <% if(username){ %>
        <div class="mt-4">
        <a href="/update_prize/<%= prize.id %>" class="card-link text-info">update</a>
        <a href="/delete_prize/<%= prize.id %>" class="card-link text-info">delete</a>
        </div>
         <% } %>
    </div>
</div>
<% }) %>
</html>